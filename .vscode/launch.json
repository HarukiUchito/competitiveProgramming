            "type": "cppdbg",
            "request": "launch",
            "program": "/mnt/c/Users/vixen/Documents/competitive_programming/main.out",
            "args": [
                "<",
                "debug_input.txt"
            ],
            "stopAtEntry": false,
            "cwd": "/mnt/c/Users/vixen/Documents/competitive_programming",
            "environment": [],
            "externalConsole": true,
            "preLaunchTask": "build-main",
            "pipeTransport": {
                "debuggerPath": "/usr/bin/gdb",
                "pipeProgram": "C:\\Windows\\sysnative\\bash.exe",
                "pipeArgs": ["-c"],
                "pipeCwd": ""
            },
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
